<%= flash[:notice].html_safe unless flash[:notice].blank? %>


<% provide(:title, "Request SMS") %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:user, url: request_sms_path) do |f| %>

	  <%= f.label :country_code %>
      <%= f.text_field :country_code, class: 'form-control' %>

      <br/>    

      <%= f.label :phone_number %>
      <%= f.text_field :phone_number, class: 'form-control' %>

      <br/>

      <%= f.submit "Send SMS", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>
